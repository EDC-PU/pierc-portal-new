
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow any authenticated user to upload files.
    // Allow public read access to all files. This is simple and suitable for this app,
    // where uploaded content like flyers and pitch decks are meant to be viewed.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
